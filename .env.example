# Camera credentials
# Copy this file to .env.local and enter your credentials
CAMERA_IP=192.168.1.100
CAMERA_USER=admin
CAMERA_PASSWORD=your_password_here
CAMERA_CHANNEL=0

# Capture settings
CAPTURE_INTERVAL=1
TARGET_HEIGHT=1080
SHOW_PREVIEW=true
RETENTION_DAYS=7
TIMESTAMP_FORMAT=%Y-%m-%d %H:%M:%S

# AI enhancement settings
UPSCALE_FACTOR=3
ENHANCEMENT_BLEND=0.8

# Image quality
JPEG_QUALITY=80
AVIF_QUALITY=65
AVIF_SPEED=4
AVIF_SUBSAMPLING=4:2:0

# Output directory for local images
OUTPUT_DIR=images

# SFTP upload (optional)
# Leave empty or remove to disable SFTP upload
SFTP_HOST=
SFTP_PORT=22
SFTP_USER=
SFTP_PASSWORD=
SFTP_PATH=
